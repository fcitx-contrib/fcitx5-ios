{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Open simulator",
            "command": "xcrun simctl boot 'iPhone 17' && open /Applications/Xcode.app/Contents/Developer/Applications/Simulator.app",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Install dependencies (arm64 simulator)",
            "command": "./scripts/install-deps.sh SIMULATORARM64",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Configure (arm64 simulator)",
            "command": "cmake -B build/SIMULATORARM64 -G Xcode -DPLATFORM=SIMULATORARM64",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Build (arm64 simulator)",
            "command": "cmake --build build/SIMULATORARM64 --config Debug",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Install (arm64 simulator)",
            "command": "xcrun simctl install booted build/SIMULATORARM64/src/Debug-iphonesimulator/Fcitx5.app",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Install dependencies (x86_64 simulator)",
            "command": "./scripts/install-deps.sh SIMULATOR64",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Configure (x86_64 simulator)",
            "command": "cmake -B build/SIMULATOR64 -G Xcode -DPLATFORM=SIMULATOR64",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Build (x86_64 simulator)",
            "command": "cmake --build build/SIMULATOR64 --config Debug",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Install (x86_64 simulator)",
            "command": "xcrun simctl install booted build/SIMULATOR64/src/Debug-iphonesimulator/Fcitx5.app",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Install dependencies",
            "command": "./scripts/install-deps.sh OS64",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Configure",
            "command": "cmake -B build/OS64 -G Xcode -DPLATFORM=OS64",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Build",
            "command": "cmake --build build/OS64 --config Debug -- CODE_SIGNING_ALLOWED=NO",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Pack",
            "command": "rm -rf Payload Fcitx5.ipa && mkdir Payload && cp -r Fcitx5.app Payload && zip -r Fcitx5.ipa Payload",
            "options": {
                "cwd": "${workspaceFolder}/build/OS64/src/Debug-iphoneos"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Format",
            "command": "./scripts/format.sh",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Lint",
            "command": "./scripts/lint.sh",
            "group": {
                "kind": "build"
            }
        }
    ]
}
